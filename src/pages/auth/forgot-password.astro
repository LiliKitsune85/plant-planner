---
import { ForgotPasswordForm } from "@/components/auth/ForgotPasswordForm";
import { AuthCard } from "@/components/auth/AuthCard";
import AuthLayout from "@/layouts/AuthLayout.astro";

export const prerender = false;

const footerLinks = [
  {
    href: "/auth/login",
    label: "Pamiętasz już hasło?",
    description: "Wróć do ekranu logowania.",
  },
  {
    href: "/auth/register",
    label: "Nie masz konta?",
    description: "Załóż je w kilka chwil.",
  },
];
---

<AuthLayout
  title="Plant Planner — odzyskiwanie hasła"
  heading="Odzyskaj dostęp do Plant Planner"
  description="Podaj swój e-mail, a wyślemy instrukcję ustawienia nowego hasła. Komunikat zawsze jest neutralny, aby chronić Twoją prywatność."
  eyebrow="Bezpieczeństwo"
>
  <AuthCard
    title="Wyślij instrukcję resetu"
    description="Po wdrożeniu backendu wiadomość będzie prowadzić do strony resetu, którą już teraz projektujemy."
    footerLinks={footerLinks}
  >
    <ForgotPasswordForm client:load />
  </AuthCard>
</AuthLayout>
