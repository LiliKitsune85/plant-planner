---
import { ResetPasswordForm } from "@/components/auth/ResetPasswordForm";
import { AuthCard } from "@/components/auth/AuthCard";
import AuthLayout from "@/layouts/AuthLayout.astro";

export const prerender = false;

const footerLinks = [
  {
    href: "/auth/login",
    label: "Wróć do logowania",
    description: "Po zapisaniu nowego hasła zaloguj się ponownie.",
  },
  {
    href: "/auth/forgot-password",
    label: "Nie masz maila z instrukcją?",
    description: "Wyślij prośbę jeszcze raz.",
  },
];
---

<AuthLayout
  title="Plant Planner — nowe hasło"
  heading="Ustaw nowe hasło"
  description="Po kliknięciu w link z e-maila otworzymy tutaj formularz resetu. Backend zajmie się weryfikacją kodu i utrzymaniem sesji."
  eyebrow="Bezpieczeństwo"
>
  <AuthCard
    title="Zdefiniuj nowe hasło"
    description="Hasło jest przechowywane po stronie Supabase. UI dba o walidację i przyjazne komunikaty."
    footerLinks={footerLinks}
  >
    <ResetPasswordForm client:load />
  </AuthCard>
</AuthLayout>
